{% extends 'base.html.twig' %}

{% block title %}Ouvrage index{% endblock %}

{% block body %}
    <h1>Ouvrage index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ouvrage in ouvrages %}
            <tr>
                <td>{{ ouvrage.id }}</td>
                <td>{{ ouvrage.titre }}</td>
                <td>
                    <a href="{{ path('app_ouvrage_show', {'id': ouvrage.id}) }}">show</a>
                    <a href="{{ path('app_ouvrage_edit', {'id': ouvrage.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_ouvrage_new') }}">Create new</a>
{% endblock %}
